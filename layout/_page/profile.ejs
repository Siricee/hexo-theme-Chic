<div class="container">
    <div class="intro">
        <div class="avatar">
            <% if (theme.avatar.gravatar && theme.avatar.gravatar.enable && theme.avatar.gravatar.email) { %>
				<a href="<%- url_for(theme.nav.Posts) %>"><img src="<%= gravatar(theme.avatar.gravatar.email) %>"></a>
            <% } else { %>
				<a href="<%- url_for(theme.nav.Posts) %>"><img src="<%- url_for(theme.avatar.url) %>"></a>
            <% } %>
        </div>
        <div class="nickname"><%- theme.nickname %></div>
        <div class="description"><%- markdown(theme.description) %></div>
        <div class="links">
            <% if (theme.links !== undefined) { %>
                <% for (var key in theme.links){ %>
                    <a class="link-item" title="<%- key %>" href="<%= theme.links[key] %>">
                        <% if(theme.links_text_enable) { %>
                            <%= key %>
                        <%}%>
                        <%if(theme.links_icon_enable){ %>
                            <i class="iconfont icon-<%- key.toLowerCase() %>"></i>
                        <%}%>
                    </a>
                <% } %>
            <% } %>
        </div>
    </div>
</div>
